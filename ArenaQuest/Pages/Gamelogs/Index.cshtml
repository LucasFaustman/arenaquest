@page
@model ArenaQuest.Pages.Gamelogs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        Filter by Arena:
        <select asp-for="GamelogArena" asp-items="Model.Arenas">
            <option value="">All</option>
        </select>
        Filter by team: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Gamelog[0].Team1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gamelog[0].Team2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gamelog[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gamelog[0].League)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gamelog[0].Arena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gamelog[0].Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gamelog[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Gamelog) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Team1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.League)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
